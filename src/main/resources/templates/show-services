        </form>
<table>
  <thead>
    <tr>
      <th th:text="nome">Name</th>
      <th th:text="preco">Price</th>
    </tr>
  </thead>
  <tbody>
    <tr th:each="serv: ${name}">
      <td th:text="${serv.nome} + 'eu sou uma banana' ">Banana</td>
      <td th:text="${#numbers.formatDecimal(serv.preco, 1, 2)}">584643453435</td>
    </tr>
  </tbody>
